<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <div class="form-check">
          <% if task.completed  %>
            <input class="form-checkinput" type="checkbox" value="true" id="flexCheckDefault"checked>
            <label class="form-check-label" for="flexCheckDefault">
            </label>
            <% else %>
            <input class="form-checkinput" type="checkbox" value="true" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
            </label>
          <% end %>
        <%= link_to task.title,
          task_path(task)
        %>
        <%= link_to "Delete",
          task_path(task),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
        </div>
      </li>
  <% end %>
</ul>
<p><%= link_to "Add a new task", tasks_new_path %></p>
